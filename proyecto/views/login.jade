extends ./layout.jade
block contenido
	form(action="/users" method="POST")
		div(class="form-group")
			label(for="email") Correo Electronico
			input(type="text" name="email" placeholder="Correo Electronico" id="email" class="form-control")
		div(class="form-group")
			label(for="password") Contraseña
			input(type="password" name="password" placeholder="Contraseña" id="password" class="form-control")
		button(type="submit" class="btn btn-primary") Iniciar